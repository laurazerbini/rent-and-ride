<div class="container">
  <h1 class="mt-4 mb-5">My previous bookings</h1>
  <% @bookings.each do |booking| %>
    <div class="card-booking mt-4">
      <img src="https://images.unsplash.com/photo-1516045827954-c625663e0dc7?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fGJpa2VzfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" />

      <div class="col">
        <p class="text-right font-weight-bold font-italic .align-items-start text-warning ml-3"><%= booking.status = 'Completed' %></p>
        <div class="card-booking-text">
          <h2><%= booking.bike.bike_name %></h2>
          <p><%= booking.bike.bike_description %></p>
          <p>Dates: <%= booking.booking_date %> - <%= booking.end_date %></p>

          <div class="price-form">
            <p><strong>Price</strong></p>
            <p><strong>â‚¬</strong><%= booking.bike.price %><span>/day</span></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>
