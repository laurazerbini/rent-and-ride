<div class="container-xxl mt-5 ml-5 mr-5">
  <div class="row">
    <div class="col-12">
      <h1>Our bikes</h1>
    </div>
  </div>
  <div class="row">
    <% @bikes.each do |bike| %>
    <div class="col-4">
      <div class="bike-card">
<!--         <div class="bike-card-image" style="background-image: url('<%#= bike.photo.key %>')"></div>
 -->      <div class="bike-card-image" style="background-image: url('https://images.unsplash.com/photo-1516045827954-c625663e0dc7?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fGJpa2VzfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60')"></div>
          <div class="bike-card-content">
            <div class="bike-card-title">
              <h5> <%= bike.bike_name %> </h5>
            </div>
            <p><%= bike.bike_address %> </p>
            <div class="flex">
              <p><strong>Price</strong></p>
              <p><strong>â‚¬</strong><%= bike.price %><span>/day</span></p>
            </div>
          </div>
          <div class="bike-card-actions">
            <%= link_to 'More info', bike_path(bike) %>
            <%#= link_to 'Edit', edit_bike_path(edit), class: 'ml-3 text warning' %>
            <%= link_to 'Delete', bike_path(bike),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: 'ml-3 text-danger'
            %>
          </div>
      </div>
    </div>
    <% end  %>
  </div>
</div>


