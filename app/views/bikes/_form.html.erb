    <%= simple_form_for @bike do |f| %>
    <%= f.input :bike_name, placeholder: 'Bike Name' %>
    <%= f.input :bike_address, placeholder: 'Address' %>
    <%= f.input :bike_description, placeholder: 'Description' %>
    <%= f.input :price, placeholder: 'Price' %>
    <%= f.input :availability, placeholder: 'Available?' %>
    <%= f.input :bike_url, placeholder: 'URL' %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-flat' %>
    <% end %>